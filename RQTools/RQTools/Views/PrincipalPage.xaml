<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             x:Class="RQTools.Views.PrincipalPage">
    <ContentPage.Content>
        <StackLayout
            BindingContext="{Binding Principal}">
            <Label Text="Bienvenido al sistema de registro de Inventarios !" />
            <Label Text="Por favor selecciona una opción" />
            <StackLayout  Padding="10">
                <Label Text="Realizar un Inventario"/>
                <Button Text="IR"/>
            </StackLayout>
            <StackLayout  Padding="10">
                <Label Text="Ver historial de inventarios"/>
                <Button Text="ir" />
            </StackLayout>
            <StackLayout  Padding="10">
                <Label Text="Ir a la sección de ayuda"/>
                <Button Text="IR"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>